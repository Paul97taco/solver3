    función Solver (primero, segundo, maximo) {
    this.primero = primero;
    this.segundo = segundo;
    this.maximo = maximo;
    this.serie = [];
    this.generar = generar;

    función generar () {
        this.serie.push (this.primero)
        this.serie.push (this.segundo);
    }

}

var lista = [];
var generar = función (anterior, ultimo) {
    if (anterior + ultimo> maximo) {
        volver lista;
    } más {
        nuevo = anterior + ultimo;
        lista.push (nuevo);
        volver generar (ultimo, nuevo);
    }
}
